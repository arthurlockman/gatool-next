{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "esnext",
            "dom"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./",
        "sourceMap": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "webpack"
    ],
    "types": [
        "typePatches"
    ]
}